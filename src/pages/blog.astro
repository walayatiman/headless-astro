---
import Base from "../layouts/Base.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const pageTitle = "My learning blog";
---

<Base pageTitle={pageTitle}>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</Base>
